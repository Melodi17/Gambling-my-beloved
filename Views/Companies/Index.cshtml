@model IEnumerable<Gambling_my_beloved.Models.Company>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4">All Companies</h1>
<hr/>

@if (User.IsInRole(Roles.Administrator))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

@await Html.PartialAsync("_IndexSearchPartial")

<table class="table">
    <thead>
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CEO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Industries)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td class="align-content-center">
                <a asp-action="Details" asp-route-id="@item.Id">
                    <img src="@item.LogoUrl" alt="Company logo" class="img-thumbnail" style="height: 75px; width: 75px;"/>
                </a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="text-dark no-dec">
                    @Html.DisplayFor(modelItem => item.Name)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CEO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Industries, "BadgeIndustry")
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>