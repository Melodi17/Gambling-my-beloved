@model IEnumerable<Gambling_my_beloved.Models.Stock>

@{
    ViewData["Title"] = "All Stocks";
}

<h1 class="display-4">All Stocks</h1>
<hr/>

@if (User.IsInRole(Roles.Administrator))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>   
}

@await Html.PartialAsync("_IndexSearchPartial")

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Symbol)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Company)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceChange)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PriceChangePercent)
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (Stock item in Model)
    {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="stock-nameplate" style="background-color: @item.Color">
                    @item.Symbol
                </a>
            </td>
            <td>
                <a asp-controller="Companies" asp-action="Details" asp-route-id="@item.Company.Id" class="text-dark no-dec">
                    @Html.DisplayFor(modelItem => item.Company.Name)
                </a>
            </td>
            <td>
                @item.UnitPrice.ToCurrency()
            </td>
            <td>
                @item.PriceChange.ToCurrency()
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PriceChangePercent, "PriceChange")
            </td>
        </tr>
    }
    </tbody>
</table>